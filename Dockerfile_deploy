FROM zhuoqiw/ros-test:latest AS test

FROM ros:galactic

COPY --from=test /opt/Galaxy_camera /opt/Galaxy_camera
COPY --from=test /opt/opencv /opt/opencv
COPY --from=test /opt/pcl /opt/pcl
COPY --from=test /ws/install /ws/install
COPY --from=test /ros_entrypoint.sh /ros_entrypoint.sh

ENV LD_LIBRARY_PATH /opt/opencv/lib:/opt/pcl/lib:$LD_LIBRARY_PATH
